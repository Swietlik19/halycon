mixin site-nav(modifier)
  nav.site-nav.navbar.navbar-light
    button.navbar-toggler.ml-auto(type="button", data-toggle="collapse", data-target="#navbarSupportedContent", aria-controls="navbarSupportedContent", aria-expanded="false", aria-label="Toggle navigation")
      span.navbar-toggler-icon
    .collapse.navbar-collapse(id="navbarSupportedContent")
      ul.nav.navbar-nav.text-right
        li.nav-item.active
          a.nav-link Home
        li.nav-item
          a.nav-link(href="#about") About
        li.nav-item
          a.nav-link(href="#features") Features
        li.nav-item
          a.nav-link(href="#advantages") Advantages
        li.nav-item
          a.nav-link(href="#team") Team
        li.nav-item
          a.nav-link(href="#subscribe") Subscribe
